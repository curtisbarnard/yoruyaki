import BaseLayout from '../../layouts/BaseLayout.astro';
const title = 'Yoruyaki - January 2026';

import workingTheGrill from '../../images/20260207_151111_PXL.webp';
import coatHooks from '../../images/20260207_151547_1000007378.webp';
import happyGuests from '../../images/20260207_153141_1000007390.webp';
import plateOfFood from '../../images/20260207_172109_IMG.webp';
import sakeSpray from '../../images/20260207_180100_IMG_3569.webp';
import relaxing from '../../images/20260207_193726_PXL.webp';
import detailedMenu from '../../images/20260207_193752_PXL.webp';
import coachingNorris from '../../images/20260207_210322_PXL.webp';
