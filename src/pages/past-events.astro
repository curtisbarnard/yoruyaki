---
import '@fontsource/yuji-syuku';
import BaseLayout from '../layouts/BaseLayout.astro';
const title = 'Yoruyaki - Past Events';
---

<BaseLayout title={title} />
<main>
  <ul>
    <li><a href='/past-events/20250308'>March 8th, 2025</a></li>
    <li><a href='/past-events/20241221'>December 21st, 2024</a></li>
  </ul>
</main>

<style>
  main {
    margin: 0 auto;
    width: 100%;
    max-width: 75ch;
  }
  .date {
    display: block;
    margin-bottom: 1rem;
    text-align: right;
  }
  section {
    margin-bottom: 4rem;
    display: grid;
    grid-template-columns: 1fr 8fr;
  }
  .items {
    display: grid;
    grid-template-columns: 1fr 1fr;
    column-gap: 1rem;
    border-left: 1px solid rgb(173, 165, 159);
    padding-left: 2.2rem;
  }
  section h2 {
    font-family: 'Yuji Syuku', serif;
    font-weight: 400;
    margin: 0;
    padding: 0;
    font-size: 2.4rem;
    writing-mode: vertical-lr;
  }
  section h3 {
    font-family: 'Yuji Syuku', serif;
    font-weight: 400;
    font-size: 1.6rem;
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  section a {
    text-decoration: none;
  }
  .items > p {
    font-style: italic;
    grid-column-start: span 2;
    font-size: 0.8rem;
  }
  p {
    margin: 0;
    font-size: 1rem;
  }

  @media (max-width: 650px) {
    .items {
      padding-left: 1rem;
    }
    p {
      font-size: 1rem;
    }
  }
</style>
